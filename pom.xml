                            <argLine>-Darquillian.launch=glassfish-ondemand ${jacoco.utAgentConfig}</argLine>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
