<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
                                http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="tomcat-embedded">
        <configuration>
            <property name="unpackArchive">true</property>
        </configuration>
    </container>

    <container qualifier="tomcat-ondemand">
        <configuration>
            <property name="catalinaHome">target/apache-tomcat-7.0.42</property>
        </configuration>
    </container>

    <container qualifier="tomcat-managed">
        <configuration>
            <property name="catalinaHome">/java/servers/apache-tomcat-7.0.42</property>
            <property name="bindHttpPort">18080</property>
            <property name="jmxPort">18089</property>
            <property name="user">admin</property>
            <property name="pass">adminadmin</property>
        </configuration>
    </container>

    <container qualifier="tomcat-remote">
        <configuration>
            <property name="host">localhost</property>
            <property name="httpPort">18080</property>
            <property name="user">admin</property>
            <property name="pass">adminadmin</property>
        </configuration>
    </container>

    <container qualifier="glassfish-ondemand">
        <configuration>
            <property name="glassFishHome">target/glassfish3</property>
        </configuration>
    </container>

    <container qualifier="glassfish-managed">
        <configuration>
            <property name="glassFishHome">/java/servers/glassfish-3.1.2.2</property>
            <property name="adminPort">14848</property>
        </configuration>
    </container>

    <container qualifier="glassfish-remote">
        <configuration>
            <property name="adminHost">localhost</property>
            <property name="adminPort">14848</property>
            <property name="adminUser">admin</property>
            <property name="adminPassword">adminadmin</property>
        </configuration>
    </container>

    <container qualifier="jboss-ondemand">
        <configuration>
            <property name="jbossHome">target/jboss-as-7.1.1.Final</property>
        </configuration>
    </container>

    <container qualifier="jboss-managed">
        <configuration>
            <property name="jbossHome">/java/servers/jboss-7.1.1</property>
            <property name="managementPort">19999</property>
        </configuration>
    </container>

    <container qualifier="jboss-remote">
        <configuration>
            <property name="managementAddress">localhost</property>
            <property name="managementPort">19999</property>
        </configuration>
    </container>

</arquillian>
